<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Fusion30</item>
        <item name="windowSplashScreenBackground">@color/brand_green</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.Fusion30" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorSurface">@color/brand_background_color</item>
        <item name="colorOnSurface">@color/brand_color_on_surface</item>
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorPrimaryVariant">@color/brand_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_celtic_blue</item>
        <item name="colorSecondaryVariant">@color/brand_celtic_blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/my_poppins_font</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_border_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Cardview.MediumComponent</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
        <item name="itemIconTint">@color/brand_green_dark</item>
        <item name="itemTextColor">@color/brand_color_on_surface</item>

    </style>

</resources>