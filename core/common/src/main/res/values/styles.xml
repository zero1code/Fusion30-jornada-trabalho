<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    ESTILO BOTÃO CONFIRMAR-->
    <style name="Theme.Button.Confirmar" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/brand_celtic_blue</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">@dimen/dimen_zero</item>
        <item name="android:insetBottom">@dimen/dimen_zero</item>
        <item name="cornerRadius">@dimen/dimen_normal</item>
    </style>

    <!-- ESTILO BOTÃO CONFIRMAR OUTLINED -->
    <style name="Theme.Button.Confirmar.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/brand_celtic_blue</item>
        <item name="rippleColor">@color/brand_celtic_blue_ripple</item>
        <item name="android:textColor">@color/brand_celtic_blue</item>
        <item name="strokeWidth" tools:ignore="PrivateResource">@dimen/mtrl_btn_stroke_size</item>
        <item name="android:insetTop">@dimen/dimen_zero</item>
        <item name="android:insetBottom">@dimen/dimen_zero</item>
        <item name="cornerRadius">@dimen/dimen_normal</item>
    </style>

    <!-- ESTILO BOTÃO CONFIRMAR OUTLINED -->
    <style name="Theme.Button.Ajustes.Jornada.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">?attr/colorOnSurface</item>
        <item name="rippleColor">@color/brand_celtic_blue_ripple_2</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="strokeWidth" tools:ignore="PrivateResource">0.5dp</item>
        <item name="android:insetTop">@dimen/dimen_zero</item>
        <item name="android:insetBottom">@dimen/dimen_zero</item>
        <item name="cornerRadius">@dimen/dimen_normal</item>
        <item name="drawableTint">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <!-- ESTILO BOTÃO CANCELAR -->
    <style name="Theme.Button.Cancelar" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/brand_red</item>
        <item name="strokeWidth" tools:ignore="PrivateResource">@dimen/mtrl_btn_stroke_size</item>
        <item name="rippleColor">@color/brand_red_ripple</item>
        <item name="android:textColor">@color/brand_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">@dimen/dimen_zero</item>
        <item name="android:insetBottom">@dimen/dimen_zero</item>
        <item name="cornerRadius">@dimen/dimen_normal</item>
    </style>

    <!-- ESTILO BOTÃO NORMAL -->
    <style name="Theme.Button.Normal" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">@dimen/dimen_zero</item>
        <item name="android:insetBottom">@dimen/dimen_zero</item>
        <item name="cornerRadius">@dimen/dimen_normal</item>
    </style>

    <!-- ESTILO MATERIAL DIALOG -->

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_border_radius</item>
    </style>

    <style name="Theme.Dialog.Animation" parent="Theme.Fusion30">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <!-- ESTILO MATERIAL DIALOG -->

    <!-- ESTILO TOOLBAR -->
    <style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="titleMarginStart">@dimen/dimen_zero</item>
        <item name="contentInsetStart">@dimen/dimen_zero</item>
        <item name="contentInsetStartWithNavigation">@dimen/dimen_zero</item>
    </style>
    <!-- ESTILO TOOLBAR -->

    <!-- ESTILO CARDVIEW -->

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorSurface">@color/brand_widget_surface</item>
        <item name="colorOnSurface">@color/brand_color_on_surface</item>
    </style>

    <style name="ShapeAppearance.Cardview.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_border_radius</item>
    </style>
    <!-- ESTILO CARDVIEW -->

    <!-- ESTILO TEXTO -->
    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/my_poppins_font</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/my_poppins_font</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/my_poppins_font</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/my_poppins_font</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/my_poppins_font</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/my_poppins_font</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <!-- ESTILO TEXTO -->

    <!-- ESTILO NAVIGATIONVIEW -->
    <style name="ThemeOverlay.App.NavigationView" parent="">
