    <!-- ESTILO BOTTOMSHEETDIALOG PERMISSAO -->
    <style name="PermissionRequestDialog" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/bottom_dialog_shape</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <!-- ESTILO BOTTOMSHEETDIALOG PERMISSAO -->

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">75dp</item>
    </style>

    <!-- ESTILO TEXTINPUTLAYOUT -->
    <style name="TextInputLayoutRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
