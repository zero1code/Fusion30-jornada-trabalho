<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".presentation.RegistrarPontoFragment">

    <TextView
        android:id="@+id/tv_data"
        style="@style/TextAppearance.App.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_medium"
        app:layout_constraintEnd_toStartOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="08 de Janeiro de 2023" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/image_logo_height"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_data"
        app:layout_constraintEnd_toEndOf="@id/tv_data"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_data"
        app:srcCompat="@drawable/ic_logo_big" />

    <LinearLayout
        android:id="@+id/lt_registos_ponto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data">

        <TextView
            android:id="@+id/tv_nenhum_registro"
            style="@style/TextAppearance.App.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_medium"
            android:gravity="center"
            android:visibility="gone"
            android:text="Nenhum registro encontrado"
            android:textColor="@color/brand_red" />

        <GridLayout
            android:id="@+id/gl_registros_ponto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_medium"
            android:columnCount="5"
            android:foregroundGravity="center"
            android:visibility="gone" />

    </LinearLayout>


    <include
        android:id="@+id/jornada_ajustes"
        layout="@layout/jornada_ajuste_ponto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lt_registos_ponto" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registrar_ponto"
        style="@style/Theme.Button.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_medium"
        android:layout_marginBottom="@dimen/dimen_medium"
        android:text="@string/label_registrar_ponto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>