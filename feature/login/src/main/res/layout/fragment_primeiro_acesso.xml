<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.PrimeiroAcessoFragment"
    android:background="?attr/colorSurface">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/linear_progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:indicatorColor="@color/brand_cyan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ViewFlipper
        android:id="@+id/vf_formulario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/dimen_medium"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_medium"
        android:inAnimation="@anim/slide_in_right"
        android:outAnimation="@anim/slide_out_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_digitar_id_empresa_info" />

            <EditText
                android:id="@+id/et_empresa_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_id_empresa"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_digitar_matricula_info" />

            <EditText
                android:id="@+id/et_matricula"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="@string/label_matricula" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_qual_funcao_colaborador_info" />

            <RadioGroup
                android:id="@+id/rg_funcao"
                android:checkedButton="@+id/radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_medium">
                <RadioButton
                    android:id="@+id/rb_motorista"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/my_poppins_font"
                    android:text="@string/label_motorista"
                    android:textSize="@dimen/big_text"/>
                <RadioButton
                    android:id="@+id/tb_ajudante"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/my_poppins_font"
                    android:text="@string/label_ajudante"
                    android:textSize="@dimen/big_text"/>

            </RadioGroup>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextAppearance.App.Headline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_tirar_foto_rosto_info" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_foto"
                android:layout_width="@dimen/image_logo_height"
                android:layout_height="@dimen/image_logo_height"
                android:tint="@color/brand_green_success"
                android:layout_marginVertical="@dimen/dimen_medium"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_title"
                app:srcCompat="@drawable/ic_foco_face"/>

            <TextView
                android:id="@+id/tv_step1"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_passo_1"
                android:layout_below="@id/iv_foto"/>
            <TextView
                android:id="@+id/tv_step2"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_passo_2"
                android:layout_below="@id/tv_step1"/>
            <TextView
                android:id="@+id/tv_step3"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_passo_3"
                android:layout_below="@id/tv_step2"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tirar_foto"
                style="@style/Theme.Button.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_tirar_foto_rosto"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_confirmar_dados_informados" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_face_cadastrada"
                android:layout_width="@dimen/image_foto_face"
                android:layout_height="@dimen/image_foto_face"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                app:shapeAppearanceOverlay="@style/roundedCornersImageView"
                app:srcCompat="@drawable/ic_logo"/>

            <TextView
                android:id="@+id/tv_empresa_id"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal" />
            <TextView
                android:id="@+id/tv_matricula"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal" />
            <TextView
                android:id="@+id/tv_funcao"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal" />

            <TextView
                style="@style/TextAppearance.App.Subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_error"
                android:drawablePadding="@dimen/dimen_normal"
                app:drawableTint="@color/brand_selective_yellow"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_large"
                android:text="@string/label_confirmacao_dados_info"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_cadastro_realizado" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/image_foto_face"
                android:layout_height="@dimen/image_foto_face"
                app:srcCompat="@drawable/ic_check_circle"
                android:tint="@color/brand_green_success"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/dimen_medium"/>

            <TextView
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_normal"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginTop="@dimen/dimen_large"
                android:text="@string/label_cadastro_realizado_aguarde_1"
                app:drawableStartCompat="@drawable/ic_checklist"
                app:drawableTint="@color/brand_green_success" />
            <TextView
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_normal"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_medium"
                android:text="@string/label_cadastro_realizado_aguarde_2"
                app:drawableStartCompat="@drawable/ic_notificacao"
                app:drawableTint="@color/brand_green_success" />

        </LinearLayout>

    </ViewFlipper>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_cadastrar"
        android:src="@drawable/ic_next"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_margin="@dimen/dimen_medium"
        android:contentDescription="@string/label_proximo_description" />

    <Button
        android:id="@+id/btn_cadastrar"
        style="@style/Theme.Button.Confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_cadastrar"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="-8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>